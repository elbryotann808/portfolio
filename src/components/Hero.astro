---
  import { Image } from 'astro:assets';
  // import bryandev from '../assets/brayancv.jpg'
  import bryandev from '../assets/Avata_bryandev.png'
---

<section class="conteiner-info">
	<article class="conteiner-info__photo">
			<Image class="conteiner-info__img" src={bryandev} alt="bryan" width={250}/>
	</article>

	<article class="conteiner-info__description">
		<div class="conteiner-info__section-titles">
			<h3>Soy</h3>
			<h1 class="conteiner-info__name">Brayan Steven gamboa</h1>
			<h2 class="conteiner-info__position">Front-end Developer</h2>
		</div>
		<!-- <p class="conteiner-info__text">1 año de experiencia en el desarrollo front-end de aplicaciones web. He trabajado en proyectos para empresas, colaborando con equipos de desarrollo. Durante este tiempo, he fortalecido mis habilidades de trabajo en equipo y he manejado diversas herramientas y lenguajes de programación. Esto me ha permitido  mejorar el rendimiento, las funcionalidades y el diseño de los proyectos en los que he trabajado.</p> -->
		<a class="conteiner-info__link-donwload-cv" href="/docs/cv.pdf" target="_blank">
			<button class="conteiner-info__btn-donwload-cv">
				Descargar CV
			</button>
			</a>
		<!-- <p>colacar aca redes sociales.</p> -->
	</article>

	
</section>

<style>
	.conteiner-info{
		display: flex;
		flex-direction: column;
		gap: 20px;
    align-items: center;
    justify-content: center; 
	}

	.conteiner-info__photo {
		justify-content: center;
		display: flex;
		width: 100%;
		/* height: 200px; */
		height: auto;
		background-image: radial-gradient(rgb(4, 147, 147), rgb(1, 64, 64));
		/* background-color: rgb(4, 147, 147); */
		/* background-color: #f55e30; */
		/* background-color: #2e54c8; */
		border-radius: 50%;
	}

	.conteiner-info__img{
		border-radius: 14%;
		/* width: 90%; */
		width: auto;
		height: 100%;
	}


	.conteiner-info__description{
		width: 100%;
	}

	.conteiner-info__section-titles{
		/* background-color: aqua; */
		/* padding-bottom: 8px; */
	}

	.conteiner-info__name{
		font-size: 1.8rem;

		/* color: #062b9c; */
		/* color: #FF7043; */
		color: rgb(0, 125, 125);
		

		display: block;
		white-space: nowrap;
		border-right: 4px solid;
		width: 20ch;

		/* animation: typing 2s steps(20), blink .5 infinite step-end alternate; */
		animation: typing 2s steps(20, end), blink 0.5s step-end infinite alternate;
		overflow: hidden;
	}

	@keyframes typing {
		from { width: 0}
	}

	@keyframes blink {
		50% { border-color: transparent;}
	}

	.conteiner-info__position{
		font-size: 1.5rem;
	}

	.conteiner-info__text{
		/* color: rgb(125, 125, 125); */
		color: rgb(153, 153, 153);
	}


  .conteiner-info__btn-donwload-cv{
    border: none;
    padding: 13px;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: bolder;
    margin-top: 15px;
    cursor: pointer;
  }
	
	.conteiner-info__link-donwload-cv{
		width: 100%;
		height: 100%;
		/* background-color: rgb(87, 162, 162); */
		text-decoration: none;
		color: black;
	}


	@media (min-width: 700px){
		.conteiner-info {
			flex-direction: row;
			gap: 70px;
		}

		.conteiner-info__photo {
			width: 40%;
		}
		
		/* .conteiner-info__img{
			border-radius: 50%;
		} */

		.conteiner-info__description{
			width: 70%;
		}

		.conteiner-info__section-titles{
			padding-bottom: 12px;
		}

		.conteiner-info__name{
			font-size: 2.9rem;
		}

		.conteiner-info__text{
			font-size: 1.2rem;
		}
	
	}

</style>